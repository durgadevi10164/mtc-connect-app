// ---------- Utility ----------
function hideAll(){ document.querySelectorAll('.container').forEach(d=>d.classList.add('hidden')); }
function translateUI(){ const t = translations[language]; for(const k in t){ const el=document.getElementById(k); if(el) el.innerText=t[k]; } }
function formatTimeAMPM(time24){ if(!time24) return ""; const [h,m]=time24.split(":"); const hour12=(parseInt(h)%12)||12; const ampm=parseInt(h)<12?"AM":"PM"; return `${hour12}:${m} ${ampm}`; }

// ---------- Login ----------
function sendOTP(){ 
  const mobile = document.getElementById('mobile').value;
  if(mobile.length===10 && /^\d+$/.test(mobile)){ 
    otpCode=Math.floor(1000+Math.random()*9000).toString();
    alert("OTP sent: "+otpCode);
    document.getElementById('otp').classList.remove('hidden');
    document.getElementById('verifyBtn').classList.remove('hidden');
  } else { alert("Enter valid 10-digit number"); }
}
function verifyOTP(){ 
  if(document.getElementById('otp').value===otpCode){ hideAll(); document.getElementById('languagePage').classList.remove('hidden'); } 
  else alert("Incorrect OTP");
}
function setLanguage(lang){ language=lang; translateUI(); hideAll(); document.getElementById('homePage').classList.remove('hidden'); }

// ---------- Home ----------
function showHome(){ hideAll(); document.getElementById('homePage').classList.remove('hidden'); translateUI(); }

// ---------- Bus ----------
function showSearch(){ hideAll(); document.getElementById('searchPage').classList.remove('hidden'); translateUI(); }
function showBuses(){ 
  hideAll(); document.getElementById('busListPage').classList.remove('hidden'); translateUI();
  const from=document.getElementById('from').value||"Unknown";
  const to=document.getElementById('to').value||"Unknown";
  const time=formatTimeAMPM(document.getElementById('time').value);
  const busList=document.getElementById('busList'); busList.innerHTML='';
  const buses=[{name:"MTC Express 101", fare:30},{name:"MTC Deluxe 202", fare:40}];
  buses.forEach(bus=>{
    let btn=document.createElement("button"); 
    btn.innerText=`${bus.name} - ‚Çπ${bus.fare} | ${from} ‚Üí ${to} at ${time}`;
    btn.onclick=()=>selectBus(bus);
    busList.appendChild(btn);
  });
}
function selectBus(bus){
  selectedBus=bus;
  hideAll(); document.getElementById('seatPage').classList.remove('hidden'); translateUI();
  const seatLayout=document.getElementById('seatLayout'); seatLayout.innerHTML='';
  for(let i=1;i<=40;i++){
    let seatBtn=document.createElement("button");
    seatBtn.innerText="Seat "+i;
    seatBtn.onclick=()=>{ selectedSeat=i; showFare(bus.fare); };
    seatLayout.appendChild(seatBtn);
  }
  document.getElementById('payBtn').classList.add('hidden');
  document.getElementById('qrContainer').classList.add('hidden');
}
function showFare(fare){ 
  document.getElementById('priceDisplay').innerText=`Fare: ‚Çπ${fare}`; 
  document.getElementById('payBtn').classList.remove('hidden');
}

// ---------- QR Payment ----------
function generateQR(){
  if(!selectedSeat || !selectedBus) return alert("Select a seat first");
  const fare = selectedBus.fare;
  const upiLink = `upi://pay?pa=mtc@upi&pn=MTC%20Bus&am=${fare}&cu=INR`;
  document.getElementById('qrContainer').classList.remove('hidden');
  document.getElementById('qrContainer').innerHTML='';
  QRCode.toDataURL(upiLink, {width:200}, function(err,url){
    if(err) console.error(err);
    else document.getElementById('qrContainer').innerHTML=`<img src="${url}" alt="QR"><p>Scan to pay ‚Çπ${fare}</p>`;
  });
}

// ---------- Medical Rescue ----------
function showMedical(){ hideAll(); document.getElementById('medicalPage').classList.remove('hidden'); document.getElementById('firstAid').classList.add('hidden'); translateUI(); }
function showFirstAid(){
  const val=document.getElementById('emergency').value;
  const fa=document.getElementById('firstAid'); fa.classList.remove('hidden');
  const eta = Math.floor(Math.random()*11 + 5);
  let msg="";
  if(val==="Accident") msg="Call ambulance üöë, apply first aid, stop bleeding.";
  else if(val==="Heart Attack") msg="Call 108 immediately üöë, perform CPR if trained.";
  else if(val==="Fever") msg="Give water üíß, keep patient cool, rest.";
  else if(val==="Injury") msg="Clean wound ü©π, apply bandage, avoid infection.";
  else msg="Stay calm, call for help if needed.";
  fa.innerHTML = `<strong>Rescue Team ETA:</strong> ${eta} min ‚è±Ô∏è<br><strong>First Aid:</strong> ${msg}`;
}

// ---------- Panic ----------
function showPanic(){ hideAll(); document.getElementById('panicPage').classList.remove('hidden'); document.getElementById('panicMsgCard').classList.add('hidden'); translateUI(); }
function sendPanic(){
  const name=document.getElementById('panicName').value.trim();
  const mobile=document.getElementById('panicMobile').value.trim();
  if(!name || !mobile){ alert("Enter Name & Mobile"); return; }
  const card=document.getElementById('panicMsgCard'); 
  card.classList.remove('hidden');
  const eta = Math.floor(Math.random()*11 + 5);
  card.innerHTML=`üöì Hello ${name}, police are on the way! ETA: ${eta} min. Stay safe.`;
}

// ---------- Green Score ----------
function showGreenScore(){ hideAll(); document.getElementById('greenScorePage').classList.remove('hidden'); translateUI(); }
