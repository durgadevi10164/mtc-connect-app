  <input type="text" id="panicName" placeholder="Enter your name">
  <input type="text" id="panicMobile" placeholder="Enter mobile number">
  <button onclick="sendPanic()">Send Panic Alert</button>
  <div id="panicMsgCard" class="alertCard hidden"></div>
  <button class="backBtn" onclick="showHome()">Back</button>
</div>

